<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <div class="navbar-header page-scroll">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-colapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "<i class='fa fa-star'></i> ParticipApp".html_safe,
                  root_path,
                  class: 'navbar-brand' %>
    </div>

    <div class="collapse navbar-collapse" id="navbar-colapse">
      <ul class="nav navbar-nav navbar-right">
        <li class="hidden">
          <a href="#page-top"></a>
        </li>
        <% unless user_signed_in? %>
          <button data-target="#sign-in" data-toggle="modal"
                  class="btn btn-default btn-lg">
            <i class="fa fa-sign-in"></i> Ingresar
          </button>
          <button data-target="#sign-up" data-toggle="modal"
                  class="btn btn-default btn-lg">
            Crear Cuenta
          </button>
        <% else %>
          <div class="dropdown">
            <button id="user-dropdown" class="btn btn-default btn-lg dropdown-toggle"
                    type="button" data-toggle="dropdown" aria-haspopup="true"
                    aria-expanded="true">
              <%= current_user.first_name %>
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
              <li>
                <%= link_to "<i class='fa fa-cogs'></i> Editar perfil".html_safe,
                            edit_user_registration_path %>
              </li>
              <li>
                <%= link_to "<i class='fa fa-sign-out'></i> Cerrar Sesión".html_safe,
