<% unless user_signed_in? %>
  <div class="modal fade" id="sign-in" tabindex="-1" role="dialog" aria-labelledby="signin" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">Iniciar sesión</h4>
        </div>
        <div class="modal-body">
          <%= form_for @user, :as => :user, :url => session_path(@user) do |f| %>
            <div class="form-group">
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                <%= f.email_field :email, class: 'form-control',
                                  placeholder: 'Ingresa tu e-mail',
                                  required: true %>
              </div>
            </div>
            <div class="form-group">
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-key"></i></span>
                <%= f.password_field :password, class: 'form-control',
                                     placeholder: 'Ingresa tu contraseña',
                                     required: true %>
              </div>
            </div>
            <div class="center-align-space-around">
              <%= f.submit 'Ingresar', class: 'btn btn-default btn-lg' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="sign-up" tabindex="-1" role="dialog" aria-labelledby="signup" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">Crear Cuenta</h4>
        </div>
        <div class="modal-body">
          <%= form_for @user, url: user_registration_path do |f| %>
            <div class="form-group">
              <div class="row">
                <div class="col-xs-6">
                  <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                    <%= f.text_field :first_name, class: 'form-control',
                                      placeholder: 'Ingresa tu nombre',
                                      required: true %>
                  </div>
                </div>
                <div class="col-xs-6">
                  <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                    <%= f.text_field :last_name, class: 'form-control',
                                      placeholder: 'Ingresa tu apellido',
                                      required: true %>
                  </div>
                </div>
              </div>
            </div>
            <div class="form-group">
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                <%= f.email_field :email, class: 'form-control',
                                  placeholder: 'Ingresa tu e-mail',
                                  required: true %>
              </div>
            </div>
            <div class="form-group">
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-key"></i></span>
                <%= f.password_field :password, class: 'form-control',
                                     placeholder: 'Ingresa tu contraseña',
                                     required: true %>
              </div>
            </div>
            <div class="form-group">
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-key"></i></span>
                <%= f.password_field :password_confirmation, class: 'form-control',
                                     placeholder: 'Repite tu contraseña',
                                     required: true %>
              </div>
            </div>
            <div class="center-align-space-around">
              <%= f.submit 'Ingresar', class: 'btn btn-default btn-lg' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
