<!DOCTYPE html>
<html>
<head>
  <title>ParticipApp</title>

  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>

  <%= favicon_link_tag 'favicon.ico' %>
  <%= stylesheet_link_tag "http://fonts.googleapis.com/css?family=Montserrat:400,700" %>
  <%= stylesheet_link_tag "http://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" %>
  <%= stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/bootswatch/3.3.5/flatly/bootstrap.min.css" %>
  <%= javascript_include_tag "http://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js" %>
  <%= javascript_include_tag "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js" %>
  <%= javascript_include_tag "https://cdnjs.cloudflare.com/ajax/libs/jqBootstrapValidation/1.3.6/jqBootstrapValidation.min.js" %>
</head>
<body id="page-top" class="<%= controller_name %> <%= action_name %>">

  <div class="wrapper">
    <%= render 'shared/navbar' %>

    <%= bootstrap_flash %>
    <div class="content container">
      <%= yield %>
    </div>

    <!-- Scroll to Top Button (Only visible on small and extra-small screen sizes) -->
    <div class="scroll-top page-scroll visible-xs visible-sm">
      <a class="btn btn-primary" href="#page-top">
        <i class="fa fa-chevron-up"></i>
      </a>
    </div>

    <%= render 'shared/footer' %>
  </div>
</body>
</html>
