<%= form_for @forum do |f| %>
  <div class="form-group">
    <%= f.label :name, 'Tema de Conversación:',
                class: 'control-label' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description, 'Descripción breve del tema:',
                class: 'control-label' %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="row">
    <div class="col-xs-12 col-md-6">
      <div class="form-group">
        <label class="control-label" for="forum-category">Categoría</label>
        <select class="form-control" id="forum-category">
          <option>Seleccionar categoría</option>
          <% Category.order(:name).each do |category| %>
            <option value= "<%= category.id %>"><%= category.name %></option>
          <% end %>
        </select>
      </div>
    </div>

    <div class="col-xs-12 col-md-6">
      <div class="form-group">
        <%= f.label :content_id, 'Noticia', class: 'control-label' %>
        <%= f.grouped_collection_select :content_id, Category.order(:name),
                                        :contents, :name, :id, :title,
                                        { :prompt => 'Seleccionar noticia' },
                                        { class: 'form-control' } %>
      </div>
    </div>
  </div>

  <div class="center-align">
    <%= f.submit '¡Listo!', class: 'btn btn-default btn-lg' %>
  </div>
<% end %>
