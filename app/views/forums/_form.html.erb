<%= form_for (@forum) do |f| %>

  <div class="form-group">
    <%= f.label :topic, 'Tema de Conversación', class: 'control-label' %>
    <%= f.text_field :topic, class: 'form-control' %>
  </div>

  <div class="form-group">
    <label class="control-label" name='category'> Categoría </label>
    <select class="form-control" name='category'>
        <option>Seleccionar categoría</option>
      <% Category.order(:name).each do |category| %>
        <option value= <%= category.id %> > <%= category.name %></option>
      <% end %>
    </select>
  </div>

  <div class="form-group">
    <%= f.label :content_id, 'Noticia', class: 'control-label' %>
    <%= f.collection_select :content_id, Content.all, :id, :title, { :prompt => "Seleccionar noticia" }, { class: 'form-control' } %>
  </div>

  <%= f.hidden_field :user_id, value: current_user.id %>
  <div class="center-align">
    <%= f.submit '¡Listo!', class: 'btn btn-default btn-lg' %>
  </div>
<% end %>