<%= form_for (@forum) do |f| %>

  <div class="form-group">
    <%= f.label :name, 'Tema de Conversación:', class: 'control-label' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description, 'Descripción breve del tema:', class: 'control-label' %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <label class="control-label" for="forum_category"> Categoría </label>
    <select class="form-control" id="forum_category">
        <option>Seleccionar categoría</option>
      <% Category.order(:name).each do |category| %>
        <option value= "<%= category.id %>" > <%= category.name %></option>
      <% end %>
    </select>
  </div>

  <div class="form-group">
    <%= f.label :content_id, 'Noticia', class: 'control-label' %>
    <%= f.grouped_collection_select :content_id, Category.order(:name), :contents, :name, :id, :title, { :prompt => "Seleccionar noticia" }, { class: 'form-control' } %>
  </div>

  <%= f.hidden_field :user_id, value: current_user.id %>
  <div class="center-align">
    <%= f.submit '¡Listo!', class: 'btn btn-default btn-lg' %>
  </div>
<% end %>